{% extends 'base.html.twig' %}

{% block title %}Incident index{% endblock %}

{% block body %}

    <h1>Liste des incidents</h1>

    <a class="btn btn-outline-warning mb-2" href="{{ path('app_welcome') }}">Retour à la homepage</a>

    <table class="table">
        <thead>
        <tr>
            <th>Réference</th>
            <th>Date de création</th>
            <th>Priorité</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for incident in incidents %}
            <tr>
                <td>{{ incident.reference }}</td>
                <td>{{ incident.createdAt ? incident.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if incident.priority.value  == "Low" %}
                        <span class="badge text-bg-success">{{ incident.priority.value }}</span>
                    {% elseif incident.priority.value  == "Medium" %}
                        <span class="badge text-bg-info">{{ incident.priority.value }}</span>
                    {% elseif incident.priority.value  == "High" %}
                        <span class="badge text-bg-warning">{{ incident.priority.value }}</span>
                    {% elseif incident.priority.value  == "Critical" %}
                        <span class="badge text-bg-danger">{{ incident.priority.value }}</span>
                    {% endif %}
                </td>
                <td>
                    {% if incident.status.value  == "New" %}
                        <span class="badge text-bg-success">{{ incident.status.value }}</span>
                    {% elseif incident.status.value  == "In Progress" %}
                        <span class="badge text-bg-info">{{ incident.status.value }}</span>
                    {% elseif incident.status.value  == "Resolved" %}
                        <span class="badge text-bg-warning">{{ incident.status.value }}</span>
                    {% elseif incident.status.value  == "Rejected" %}
                        <span class="badge text-bg-danger">{{ incident.status.value }}</span>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_incident_show', {'id': incident.id}) }}">Détails</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
